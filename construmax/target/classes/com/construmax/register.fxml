<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="center" spacing="20" stylesheets="@Styles/LoginStyles.css" xmlns:fx="http://javafx.com/fxml" fx:controller="com.construmax.Controllers.RegisterController">
    <children>
        <Label text="Construmax" styleClass="text-primary"></Label>
        <Label text="FaÃ§a seu Cadastro" styleClass="text-secondary"></Label>
        <TextField promptText="name" fx:id="name" focusTraversable="false" styleClass="input-primary"/>
        <TextField promptText="CPF"  fx:id="CPF" focusTraversable="false" styleClass="input-primary"/>
        <TextField promptText="phone" fx:id="phone" focusTraversable="false" styleClass="input-primary"/>
        <TextField promptText="example@gmail.com" fx:id="email" focusTraversable="false" styleClass="input-primary"/>
        <PasswordField promptText="password" fx:id="password" focusTraversable="false" styleClass="input-primary"/>
        <Button text="Cadastrar" styleClass="submit-button" fx:id="submit"></Button>
        <HBox alignment="center">
            <Label text="Possui conta?"></Label>
            <Hyperlink fx:id="hyperlink" text="clique aqui!"></Hyperlink>
        </HBox>
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>