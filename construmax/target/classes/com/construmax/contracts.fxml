<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- 1. Adiciona o Controller -->
<StackPane stylesheets="@Styles/Contracts.css" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.construmax.Controllers.ContractsController">
    <VBox alignment="TOP_CENTER" spacing="20" styleClass="main-form">
        <children>
            <Label styleClass="label-primary" text="Meus Contratos" />
            
            <!-- 2. Adiciona a Tabela -->
            <TableView fx:id="contractsTable" prefHeight="400.0" prefWidth="600.0">
                <columns>
                    <!-- 3. Linka as colunas com os fx:id do Controller -->
                    <TableColumn fx:id="colId" prefWidth="75.0" text="Nº Contrato" />
                    <TableColumn fx:id="colStartDate" prefWidth="120.0" text="Data Início" />
                    <TableColumn fx:id="colEndDate" prefWidth="120.0" text="Data Fim" />
                    <TableColumn fx:id="colTotalValue" prefWidth="120.0" text="Valor Total (R$)" />
                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                </columns>
            </TableView>
        </children>
    </VBox>
</StackPane>