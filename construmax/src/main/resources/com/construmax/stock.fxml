<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>  
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<StackPane stylesheets="@Styles/Stock.css" xmlns:fx="http://javafx.com/fxml" fx:controller="com.construmax.Controllers.StockController">
    <VBox alignment="top_center" spacing="0" styleClass="main-stock">
        <children>
            <Label text="Estoque" styleClass="text-primary"/>
            <TableView styleClass="table" fx:id="tableEquipments">
                <columns>
                    <TableColumn fx:id="name" text="Nome" prefWidth="200"/>
                    <TableColumn fx:id="type" text="Tipo" prefWidth="200"/>
                    <TableColumn fx:id="description" text="Descrição" prefWidth="200"/>
                    <TableColumn fx:id="availableQuantity" text="Quantidade Disponível" prefWidth="200"/>
                    <TableColumn fx:id="maintenanceQuantity" text="Quantidade em Manutenção" prefWidth="200"/>
                    <TableColumn fx:id="inUseQuantity" text="Quantidade em Uso" prefWidth="200"/>
                    <TableColumn fx:id="dailyValue" text="Valor Diária" prefWidth="200"/>
                </columns>
            </TableView>
        </children>
    </VBox>
</StackPane>