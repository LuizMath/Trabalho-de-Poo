<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Separator?>
<?import org.kordamp.ikonli.javafx.FontIcon?>



<BorderPane xmlns:fx="http://javafx.com/fxml" stylesheets="@Styles/Home.css" fx:controller="com.construmax.Controllers.HomeController">
  <fx:define>
    <ToggleGroup fx:id="toggleGroup"/>
  </fx:define>
    <left>
      <VBox styleClass="sidebar-primary" spacing="20">
          <HBox alignment="CENTER_LEFT" spacing="10">
            <Label>
              <graphic>
                <FontIcon iconLiteral="fas-tools" iconSize="20"/>
              </graphic>
            </Label>
            <Label text="Construmax" styleClass="label-primary"></Label>
          </HBox>
          <Separator />
          <ToggleButton fx:id="payments" styleClass="button-primary" text="Pagamentos" toggleGroup="$toggleGroup"/>
          <ToggleButton fx:id="maintenance" styleClass="button-primary" text="Manutenções" toggleGroup="$toggleGroup"/>
          <ToggleButton fx:id="reports" styleClass="button-primary" text="Relatórios" toggleGroup="$toggleGroup"/>
          <ToggleButton toggleGroup="$toggleGroup" fx:id="equipment" styleClass="button-primary" selected="true">Cadastrar Equipamento</ToggleButton>
          <ToggleButton toggleGroup="$toggleGroup" fx:id="stock" styleClass="button-primary">Estoque</ToggleButton>
          <ToggleButton toggleGroup="$toggleGroup" fx:id="rentEquipment" styleClass="button-primary">Alugar Equipamento</ToggleButton>
          <ToggleButton toggleGroup="$toggleGroup" fx:id="returnEquipment" styleClass="button-primary">Devolver Equipamento</ToggleButton>
      </VBox>
    </left>
    <center>
      <VBox fx:id="contentVBox" spacing="20"
          alignment="CENTER">
      </VBox>
    </center>
</BorderPane>
