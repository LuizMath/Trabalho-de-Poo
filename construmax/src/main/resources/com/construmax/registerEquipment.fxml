<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<StackPane stylesheets="@Styles/RegisterEquipment.css" xmlns:fx="http://javafx.com/fxml" fx:controller="com.construmax.Controllers.RegisterEquipmentController">
    <children>
        <VBox alignment="CENTER" spacing="20" styleClass="main-form">
            <children>
                <Label text="Cadastrar Equipamento" styleClass="text-primary" />
                <VBox alignment="CENTER_LEFT" spacing="10" maxWidth="500">
                    <children>
                        <Label style="-fx-font-size: 16px" text="Nome do Equipamento" />
                        <TextField styleClass="input-primary" fx:id="name" focusTraversable="false" promptText="name"/>
                        <Label style="-fx-font-size: 16px" text="Tipo do equipamento" />
                        <TextField styleClass="input-primary" fx:id="type" focusTraversable="false" promptText="equipment type"/>
                        <Label style="-fx-font-size: 16px" text="Descrição do Equipamento" />
                        <TextField styleClass="input-primary" fx:id="description" focusTraversable="false" promptText="description equipment"/>
                        <Label style="-fx-font-size: 16px" text="Quantidade do Equipamento" />
                        <TextField styleClass="input-primary" fx:id="quantity" focusTraversable="false" promptText="quantity equipment"/>
                        <Label style="-fx-font-size: 16px" text="Valor Diária" />
                        <TextField styleClass="input-primary" fx:id="dailyValue" focusTraversable="false" promptText="day value"/>
                        <Label style="-fx-font-size: 16px" text="Taxa de Dano ao Equipamento" />
                        <TextField styleClass="input-primary" fx:id="damageFee" focusTraversable="false" promptText="damage fee"/>
                        <Button text="Enviar" fx:id="submit" styleClass="submit-button" maxWidth="Infinity">
                            <VBox.margin>
                                <Insets top="10"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</StackPane>
